{{$ content}}
<div class="panel panel-default">
    <div class="panel-heading">Add User</div>
    <div class="panel-body">

        <div class="row">
            <div class="col-md-3">
                <h3>Quick Actions</h3>
                <a href="users.php" class="btn btn-info btn-block" role="button"><i class="zmdi zmdi-account"></i> User List</a>
            </div>
            <div class="col-md-9">
                <form action="users.php?action=insert" method="post" autocomplete="off">
                    <div class="form-group">
                        <label for="userUserName">User Name</label>
                        <input type="text" class="form-control" name="userUserName" placeholder="UserName" value="{{post.userUserName}}">
                    </div>
                    <div class="form-group">
                        <label for="userName">Full Name</label>
                        <input type="text" class="form-control" name="userName" placeholder="John Doe" value="{{post.userName}}">
                    </div>
                    <div class="form-group">
                        <label for="userEmail">E-Mail</label>
                        <input type="email" class="form-control" name="userEmail" placeholder="flast@coloradomesa.edu" value="{{post.userEmail}}">
                    </div>
                    <div class="form-group">
                        <label for="userPassword">Password</label>
                        <input type="password" class="form-control" name="userPassword" placeholder="Password">
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="userAdmin" {{# post.userAdmin}}checked{{/ post.userAdmin}}> Admin User
                        </label>
                    </div>
                    <button type="submit" class="btn btn-info"><i class="zmdi zmdi-account-add"></i>&nbsp;Add</button>
                    <a href="users.php" class="btn btn-info"><i class="zmdi zmdi-undo"></i>&nbsp;Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
